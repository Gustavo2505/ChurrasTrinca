<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChurrasTrinca.Views.Bbq.AddParticipant">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Entry Placeholder="Nome" x:Name="name"/>
            <Entry Placeholder="Confirmado?" x:Name="confirmed"/>
            <Entry Placeholder="Valor pago" Keyboard="Numeric" x:Name="value_paid"/>
            <Button Text="Cadastrar" Clicked="BtnCadastrar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>